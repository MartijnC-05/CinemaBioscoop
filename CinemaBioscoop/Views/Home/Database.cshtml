@using CinemaBioscoop.Database
@model List<Product>
@{
    ViewData["Title"] = "Database";
}

<body>
    <div class="page-content">
        <h1 class="display-4">Welcome!</h1>
        <ul>
            @foreach(var product in Model)
        {
            <a href="/product/@product.Id" id="product">@product.Naam - @product.Prijs</a>
        }
        </ul>
    </div>
</body>