@using CinemaBioscoop.Database
@model List<Film>
@{
    ViewData["Title"] = "Detail pagina";
    ViewData["currentTab"] = "films";
}
@foreach(var film in Model)
{


<body>
<div class="page-content">
    <div class="video">
        <iframe width="1320" height="700" src="https://www.youtube.com/embed/vw2FOYjCz38?&autoplay=0&controls=0&mute=0&showinfo=0&loop=1" title="YouTube video player" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="detaillinks">
        <div class="poster">
            <img src="https://media.pathe.nl/nocropthumb/360x508/gfx_content/PathePartners/movie-24292-NTTD_DIGTAL_1SHEET_ICONIC_TUX_NED-30sept.jpg">
        </div>
        <div class="kijkwijzer">
            <img src="https://www.pathe.nl/assets/img/icons/kijkwijzer/kijkwijzer-12-gray-32.png" style="margin-left: 5px;">
            <img src="https://www.pathe.nl/assets/img/icons/kijkwijzer/kijkwijzer-fear-gray-32.png">
            <img src="https://www.pathe.nl/assets/img/icons/kijkwijzer/kijkwijzer-explicitlanguage-gray-32.png">
            <img src="https://www.pathe.nl/assets/img/icons/kijkwijzer/kijkwijzer-violence-gray-32.png">
        </div>
        <div class="categorie">
            <h3 style="width:40px; padding-left:5px; margin-left:5px; float:left;">Actie</h3>
            <h3 style="width:65px; padding-left:5px; margin-left:5px; float:left;">Avontuur</h3>
        </div>
    </div>
    <div class="detailmidden">
        <h1>@film.Naam</h1><br>
        <h3>@film.Omschrijving</h3><br>
    
        <table>
            <tr>
                <th>Regisseur</th>
                <td>@film.Regisseur</td>
            </tr>
            <tr>
                <th>Cast</th>
                <td>@film.Cast</td>
            </tr>
        </table>

    </div>
    <div class="detailrechts">        
        <a href="/bestellen" class="bestellen">Tickets bestellen</a> <br><br>
        <table>
            <tr>
                <th style="font-size: 16px; width: 300px;">Release</th>
                <td style="font-size: 13px;">@film.Release</td>
            </tr>
            <tr>
                <th style="font-size: 16px; width: 300px;">Speelduur</th>
                <td style="font-size: 13px;">@film.Speelduur</td>
            </tr>
            <tr>
                <th style="font-size: 16px; width: 300px;">Gesproken taal</th>
                <td style="font-size: 13px;">@film.Taal</td>
            </tr>
            <tr>
                <th style="font-size: 16px; width: 300px;">Ondertiteling</th>
                <td style="font-size: 13px;">@film.Ondertiteling</td>
            </tr>
        </table>
    </div>
</div>
</body>

}